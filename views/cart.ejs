<%- include('./partials/header') %>

<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-extrabold text-gray-900 mb-8 text-center sm:text-left">Your Cart</h1>
    
    <% if (cartWithBill.length === 0) { %>
      <div class="bg-white shadow-md rounded-lg p-8 text-center">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Your cart is empty</h2>
        <p class="text-gray-600 mb-6">Looks like you haven't added any items to your cart yet.</p>
        <a href="/shop" class="inline-block bg-blue-600 text-white font-semibold px-6 py-3 rounded-md hover:bg-blue-700 transition duration-300">
          Continue Shopping
        </a>
      </div>
    <% } else { %>
      <% cartWithBill.forEach(function(item, index){ %>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8 transition-all duration-300 hover:shadow-xl">
          <div class="md:flex">
            <div class="md:w-1/3">
              <div class="h-64 sm:h-80 flex items-center justify-center bg-[<%= item.bgcolor %>]">
                <img class="h-48 sm:h-64 object-contain transition-transform duration-300 transform hover:scale-105" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>">
              </div>
              <div class="p-4 bg-[<%= item.panelcolor %>]">
                <h3 class="text-xl font-semibold mb-2 text-[<%= item.textcolor %>]"><%= item.name %></h3>
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-2">
                    <a href="/cart/decrement/<%= item._id %>" class="text-gray-600 hover:text-gray-800 transition duration-300">
                      <i class="ri-subtract-line w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300"></i>
                    </a>
                    <span class="px-4 py-2 bg-gray-100 rounded-md font-semibold"><%= item.quantity %></span>
                    <a href="/cart/increment/<%= item._id %>" class="text-gray-600 hover:text-gray-800 transition duration-300">
                      <i class="ri-add-line w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center hover:bg-gray-300"></i>
                    </a>
                  </div>
                </div>
              </div>
              <div class="flex items-center justify-between p-4 bg-[<%= item.textcolor %>] text-white">
                <h4 class="text-lg font-medium">Net Total</h4>
                <h2 class="text-lg font-bold">₹ <%= item.itemBill.toLocaleString('en-IN') %></h2>
              </div>
            </div>
            
            <div class="md:w-2/3 p-6">
              <h3 class="text-xl font-semibold mb-4 text-gray-800">Price Breakdown</h3>
              <div class="space-y-3">
                <div class="flex justify-between items-center py-2 border-b border-gray-200">
                  <span class="text-gray-600">Total MRP</span>
                  <span class="font-medium">₹ <%= item.price.toLocaleString('en-IN') %></span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-200">
                  <span class="text-gray-600">Discount on MRP</span>
                  <span class="font-medium text-green-600">- ₹ <%= Number(item.discount).toLocaleString('en-IN') %></span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-200">
                  <span class="text-gray-600">Platform Fee</span>
                  <span class="font-medium">₹ 20</span>
                </div>
                <div class="flex justify-between items-center py-2 border-b border-gray-200">
                  <span class="text-gray-600">Shipping Fee</span>
                  <span class="font-medium text-green-600">FREE</span>
                </div>
              </div>
              <div class="mt-6 pt-6 border-t-2 border-gray-200">
                <div class="flex justify-between items-center">
                  <span class="text-xl font-semibold text-gray-800">Total Amount</span>
                  <span class="text-xl font-bold text-green-600">₹ <%= item.itemBill.toLocaleString('en-IN') %></span>
                </div>
              </div>
              <div class="mt-8 flex justify-end">

              </div>
            </div>
          </div>
        </div>
      <% }) %>
      
      <div class="mt-12 text-center">
        <a href="/shop" class="inline-block bg-gray-200 text-gray-800 font-semibold px-6 py-3 rounded-md hover:bg-gray-300 transition duration-300">
          Continue Shopping
        </a>
      </div>
    <% } %>
  </div>
</div>

<%- include('./partials/footer') %>