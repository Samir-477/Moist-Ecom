<%- include('./partials/header') %>

<% if (error && error.length > 0) { %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-red-500 shadow-lg">
        <span class="text-white text-sm font-medium">
            <%= error %>
        </span>
    </div>
<% } %>


<div class="min-h-screen bg-gray-50/50 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl w-full flex flex-col md:flex-row gap-8 md:gap-16">
        <!-- Create Account Section -->
        <div class="flex-1 bg-gradient-to-b from-white to-gray-100 p-8 rounded-2xl shadow-sm relative overflow-hidden">
            <!-- Background gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-b from-gray-50/50 to-gray-100/50"></div>
            
            <div class="max-w-md mx-auto relative z-10">
                <div class="mb-8">
                    <h3 class="text-4xl font-medium mb-2 text-gray-900">welcome to <span class="text-blue-600 font-semibold">Moist</span></h3>
                    <h4 class="text-2xl text-gray-900">create your account</h4>
                </div>
                <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                    <input
                        class="w-full px-4 py-3 rounded-lg bg-white border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900"
                        type="text" placeholder="Full Name" name="fullname">
                    <input
                        class="w-full px-4 py-3 rounded-lg bg-white border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900"
                        type="email" placeholder="Email" name="email">
                    <input
                        class="w-full px-4 py-3 rounded-lg bg-white border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900"
                        type="password" placeholder="Password" name="password">
                    <button type="submit" 
                        class="w-full px-6 py-3 rounded-full bg-gray-900 text-white font-medium hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900/20 transition-all">
                        Create My Account
                    </button>
                </form>
            </div>
        </div>

        <!-- Divider -->
        <div class="hidden md:flex items-center justify-center">
            <div class="w-10 h-10 rounded-full bg-gray-900 flex items-center justify-center">
                <span class="text-white font-medium">or</span>
            </div>
        </div>

        <!-- Login Section -->
        <div class="flex-1 bg-white p-8 rounded-2xl shadow-sm">
            <div class="max-w-md mx-auto">
                <div class="mb-8">
                    <h4 class="text-2xl text-gray-900">login your account</h4>
                </div>
                <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                    <input
                        class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900"
                        type="email" placeholder="Email" name="email">
                    <input
                        class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 outline-none transition-all text-gray-900"
                        type="password" placeholder="Password" name="password">
                    <button type="submit"
                        class="w-full px-6 py-3 rounded-full bg-gray-900 text-white font-medium hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900/20 transition-all">
                        Login
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Admin Login Button -->
    <div class="absolute top-4 right-4">
        <button onclick="window.location.href='/admin'" 
            class="px-6 py-2 rounded-full bg-gray-900 text-white text-sm font-medium hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900/20 transition-all">
            Admin login
        </button>
    </div>
</div>

<%- include('./partials/footer') %>