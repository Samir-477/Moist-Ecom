<%- include('./partials/header') %>

<div class="min-h-screen bg-gray-50/50 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="bg-white p-8 rounded-2xl shadow-sm">
            <div class="mb-8">
                <h4 class="text-3xl font-medium text-gray-900">Admin Access</h4>
            </div>
            <form action="/owners/login" method="post" class="space-y-4">
                <input
                    class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20 outline-none transition-all text-gray-900"
                    type="email" placeholder="Email" name="email">
                <input
                    class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-gray-900 focus:ring-2 focus:ring-gray-900/20 outline-none transition-all text-gray-900"
                    type="password" placeholder="Password" name="password">
                <button type="submit"
                    class="w-full px-6 py-3 rounded-full bg-gray-900 text-white font-medium hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900/20 transition-all">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>